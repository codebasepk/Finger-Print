<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/bg_tv"
        android:elevation="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameId"
                android:text="Abdul Rehman Jamil"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fpIdId"
                android:text="FpId"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentDateId"
                android:text="Current Date"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkInTimeId"
                android:text="11:00:00"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/checkInStatusId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/checkOutTimeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00:00"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/checkOutStatusId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Marked"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
